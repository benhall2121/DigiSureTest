<div class="offset-2 col-lg-8">
  <div class="card">
      <div class="card-header card-header-primary">
          <h2 class="card-title">Account Transactions</h2>
      </div>

      <div class="card-body table-responsive">
        <table class="table table-hover">
          <thead class="text-primary">
            <th>Account</th>
            <th>Date Of Transaction</th>
            <th>Transaction Type</th>
            <th>Amount</th>
          </thead>
          <tbody>
            <% @account_transactions.each do |t| %>
              <tr>
                <td><%= t.bank_account.user_and_account %></td>
                <td><%= t.created_at.strftime("%b %d, %Y - %H:%M%P") %></td>
                <td><%= t.transaction_type.downcase != 'transfer' ? t.transaction_type : "Transferred to #{t.transfer_to_bank_account.user.full_name}" %></td>
                <td><%= number_to_currency(t.amount) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
      
  </div>
</div>
