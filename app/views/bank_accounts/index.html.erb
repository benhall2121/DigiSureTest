<div class="offset-2 col-lg-8">
  <div class="card">
      <div class="card-header card-header-primary">
          <h2 class="card-title">Bank Accounts</h2>
      </div>

      <div class="card-body table-responsive">
        <table class="table table-hover">
          <thead class="text-primary">
            <th>Name</th>
            <th>Account Number</th>
            <th>Balance</th>
          </thead>
          <tbody>
            <% @bank_accounts.each do |bank_account| %>
              <tr>
                <td><%= link_to bank_account.user.full_name, user_path(bank_account.user_id) %></td>
                <td><%= link_to bank_account.account_number, bank_account_path(bank_account.id) %></td>
                <td><%= number_to_currency(bank_account.balance) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
      
  </div>
</div>
