<div class="offset-2 col-lg-8">
  <div class="card">
      <div class="card-header card-header-primary">
          <h2 class="card-title">Account Number: <%= @bank_account.account_number %></h2>
          <p class="card-category"><%= @bank_account.user.full_name %></p>
      </div>

      <div class="card-body table-responsive">
        <table class="table table-hover">
          <thead class="text-primary">
            <th>Date Of Transaction</th>
            <th>Transaction Type</th>
            <th>Amount</th>
          </thead>
          <tbody>
            <% @bank_account.account_transactions.each do |t| %>
              <tr>
                <td><%= t.created_at.strftime("%b %d, %Y - %H:%M%P") %></td>
                <td><%= t.transaction_type %></td>
                <td><%= number_to_currency(t.amount) %></td>
              </tr>
            <% end %>
            <tr class="text-primary">
              <td></td>
              <td style="text-align:right; font-weight:bold;">Balance:</td>
              <td><%= number_to_currency(@bank_account.balance) %></td>
            </tr>
          </tbody>
        </table>
    </div>
      
  </div>
</div>
