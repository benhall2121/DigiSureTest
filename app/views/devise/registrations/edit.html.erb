<div class="offset-2 col-lg-8">
  <div class="card">
      <div class="card-header card-header-warning">
          <h2 class="card-title">Edit</h2>
      </div>
      
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-12">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
            </div>
          </div>

          <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-6">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autocomplete: "First Name", :class => "form-control" %>
            </div>
            <div class="col-sm-6">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, autocomplete: "Last Name", :class => "form-control" %>
            </div>
          </div>

          <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-6">
              <%= f.label :password %> <i><small>(leave blank to not change it)</small></i>
              <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
            </div>

            <div class="col-sm-6">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
            </div>
          </div>

          <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-12">
              <%= f.label :current_password %> <i><small>(we need your current password to confirm your changes)</small></i>
              <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
            </div>
          </div>

          <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-12">
              <%= f.submit "Save", :class => "btn btn-success" %>
            </div>
          </div>

        <% end %>

        <div class="row" style="margin-bottom:15px;">
          <div class="col-sm-12">
            <h3>Delete Account</h3>
          </div>
          <div class="col-sm-12">
            <%= button_to "Click here to delete your account.", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger" %>
          </div>
        </div>
      </div>

  </div>
</div>

